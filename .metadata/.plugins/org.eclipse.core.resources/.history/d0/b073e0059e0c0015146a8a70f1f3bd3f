<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">
   
    <xs:element name="box" type="box-type"/>
    
    <xs:complexType name="box-type">
        <xs:sequence>
            <xs:element minOccurs="0" maxOccurs="unbounded" name="chocolate" type="chocolate-type"/>
			<xs:element minOccurs="0" maxOccurs="unbounded" name="jelly" type="jelly-type"/>
			<xs:element minOccurs="0" maxOccurs="unbounded" name="caramel" type="caramel-type"/>
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="candy-type">     	
        <xs:sequence >
	            <xs:element name="name">
	            	<xs:simpleType>
	            		<xs:restriction base="xs:string">
                    </xs:restriction>
	            	</xs:simpleType>
	            </xs:element>     
	                   
	            <xs:element  name="weight">
	            	<xs:simpleType>
	            		<xs:restriction base="xs:integer">
	                        <xs:minInclusive value="0"/>
	                        <xs:maxInclusive value="500"/>
	            		</xs:restriction>
	            	</xs:simpleType>
	            </xs:element>
         
            
	            <xs:element name="shugar-amount">
	                <xs:simpleType>
	                    <xs:restriction base="xs:integer">
	                        <xs:minInclusive value="0"/>
	                        <xs:maxInclusive value="100"/>
	                    </xs:restriction>
	                </xs:simpleType>
	            </xs:element>
        </xs:sequence>

	    <xs:attribute name="id" type="xs:id" use="required"/> 
	    
    </xs:complexType> 
	
	<xs:complexType name="caramel-type">
		<xs:complexContent>
            <xs:extension base="candy-type">
                <xs:sequence>                    
					<xs:element name="color">
						<xs:simpleType>
							<xs:restriction base="xs:string">
		            			<xs:enumeration value="YELLOW"/>
		            			<xs:enumeration value="GREEN"/>
		            			<xs:enumeration value="RED"/>
		            			<xs:enumeration value="BLUE"/>
		            			<xs:enumeration value="ORANGE"/>
	            			</xs:restriction>
						</xs:simpleType>
					</xs:element>
					
					<xs:element name="type-of-caramel">
						<xs:simpleType>
							<xs:restriction base="xs:string">
		            			<xs:enumeration value="LOLLYPOP"/>
		            			<xs:enumeration value="LOLLYPOP_STICK"/>
		            			<xs:enumeration value="CARAMEL_CANDY"/>
	            			</xs:restriction>
						</xs:simpleType>
					</xs:element>			
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    
    <xs:complexType name="chocolate-type">
		<xs:complexContent>
            <xs:extension base="candy-type">
                <xs:sequence>                    
					<xs:element name="type-of-chocolate">
						<xs:simpleType>
							<xs:restriction base="xs:string">
		            			<xs:enumeration value="MILK"/>
		            			<xs:enumeration value="DARK"/>
		            			<xs:enumeration value="WHITE"/>
	            			</xs:restriction>
						</xs:simpleType>
					</xs:element>
					
					<xs:element name="filling">
						<xs:simpleType>
							<xs:restriction base="xs:string">
		            			<xs:enumeration value="NUTS"/>
		            			<xs:enumeration value="RAISINS"/>
		            			<xs:enumeration value="MARMALADE"/>
	            			</xs:restriction>
						</xs:simpleType>
					</xs:element>			
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    
    <xs:complexType name="jelly-type">
		<xs:complexContent>
            <xs:extension base="candy-type">
                <xs:sequence>                    
					<xs:element name="taste">
						<xs:simpleType>
							<xs:restriction base="xs:string">
		            			<xs:enumeration value="APPLE"/>
		            			<xs:enumeration value="CHERRY"/>
		            			<xs:enumeration value="MINT"/>
		            			<xs:enumeration value="LEMON"/>
		            			<xs:enumeration value="ORANGE"/>
	            			</xs:restriction>
						</xs:simpleType>
					</xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>  
    
     	   	   	   	
</xs:schema>