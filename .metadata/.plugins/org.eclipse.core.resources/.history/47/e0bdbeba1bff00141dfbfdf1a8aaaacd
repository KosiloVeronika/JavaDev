package com.epam.newyeargift.entity;

public abstract class Candy {
	private String name;
	private int weight;
	private int shugarAmount;
	
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getWeight() {
		return weight;
	}

	public void setWeight(int weight) {
		if (weight > 0) {
			this.weight = weight;
		} else {
			throw new ParameterException;
		}
		
	}

	public int getShugarAmount() {
		return shugarAmount;
	}

	public void setShugarAmount(int shugarAmount) {
		this.shugarAmount = shugarAmount;
	}

	public Candy(String name, int weight, int shugarAmount) {
		super();
		this.name = name;
		this.weight = weight;
		this.shugarAmount = shugarAmount;
	}
	
}
